<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.max.mentalhealthapp.LockScreen">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="45dp"
        android:text="Enter Password"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ImageView
        android:id="@+id/indicator2"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:background="@drawable/lockscreen_indicator_circle"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginRight="11dp"
        app:layout_constraintBottom_toBottomOf="@+id/indicator3"
        android:layout_marginEnd="11dp" />

    <ImageView
        android:id="@+id/indicator4"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/lockscreen_indicator_circle"
        app:layout_constraintBottom_toBottomOf="@+id/indicator3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/indicator3"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="0dp" />

    <ImageView
        android:id="@+id/indicator3"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:background="@drawable/lockscreen_indicator_circle"
        android:layout_marginLeft="11dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginStart="11dp" />

    <ImageView
        android:id="@+id/indicator1"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="22dp"
        android:background="@drawable/lockscreen_indicator_circle"
        app:layout_constraintBottom_toBottomOf="@+id/indicator2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/indicator2"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="22dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="206dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:orientation="horizontal"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toBottomOf="@+id/indicator2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <Button
            android:id="@+id/button1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_selector"
            android:text="1"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_selector"
            android:text="2"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_selector"
            android:text="3"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_selector"
            android:text="4"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_selector"
            android:text="5"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_selector"
            android:text="6"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_selector"
            android:text="7"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_selector"
            android:text="8"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_selector"
            android:text="9"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonMisc"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/transparent"
            android:text=""
            android:textSize="24sp" />

        <Button
            android:id="@+id/button0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_selector"
            android:text="0"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>
